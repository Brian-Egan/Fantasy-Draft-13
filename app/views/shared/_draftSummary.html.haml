%table{:class => 'table table-striped table-condensed'}
	%tr
		%th Rnd.
		- @teamsList.each do |t|
			%th 
				=link_to t.owner, team_path(t.id)
	- i = 1
	- while i < @roundNum + 1
		%tr
			%td 
				%h6 #{i}
			- if i.even?
				- if i == @roundNum
					- @blankCol = 14 - @pickNum
					- x = 1
					- while x < @blankCol
						%td
						- x += 1
				- @playersRev = Draft.round(i).order("pick DESC")
				- @playersRev.each do |d|
					- p = Player.find(d.player_id)
					%td
						%h6 #{p.name}
			- else
				- Draft.round(i).each do |d|
					- p = Player.find(d.player_id)
					%td
						%h6 #{p.name}
		- i += 1