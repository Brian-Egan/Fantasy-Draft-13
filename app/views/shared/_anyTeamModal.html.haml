.modal-dialog
	.modal-content
		.modal-header
			%button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
			%h4.modal-title#aTeamName #{teamName}
		.modal-body#aModalBody
			%table{:class => 'table table-striped table-condensed'}
				- @y = 1
				%tr
					%th{:class => 'col-md-1'} Position
					%th Slots
					%th Drafted
					%th Players
					%th Proj. Points
					%th Proj. Weekly
				= render :partial => "shared/aTeamPosRow", :locals => {:p => @myQBs, :name => "QB", :pa => pa, :y => @y }
				- @y += 1
				= render :partial => "shared/aTeamPosRow", :locals => {:p => @myRBs, :name => "RB", :pa => pa, :y => @y }
				- @y += 1
				= render :partial => "shared/aTeamPosRow", :locals => {:p => @myWRs, :name => "WR", :pa => pa, :y => @y }
				- @y += 1
				= render :partial => "shared/aTeamPosRow", :locals => {:p => @myTEs, :name => "TE", :pa => pa, :y => @y }
				- @y += 1
				= render :partial => "shared/aTeamPosRow", :locals => {:p => @myPKs, :name => "PK", :pa => pa, :y => @y }
				- @y += 1
				= render :partial => "shared/aTeamPosRow", :locals => {:p => @myDefs, :name => "Def", :pa => pa, :y => @y }
				- @y += 1
				%tr
					%th{:class => 'col-md-1'} Total
					%th #{@posAvail["Total"]}
					%th #{@myPlayers.count}
					%th 
					%th
						= SumPosPoints(@myPlayers, "rank3")
					%th
						= CalcWeeklyPoints(@posPoints, 12)
