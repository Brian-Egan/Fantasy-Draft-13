.jumbotron
  %h1 Listing drafts
  
%table
  %thead
    %tr
      %th Round
      %th Pick
      %th Draft team
      %th Player taken
      %th
      %th
      %th
  %tbody
    - @drafts.each do |draft|
      %tr
        %td= draft.round
        %td= draft.pick
        %td= draft.draft_team
        %td= draft.player_taken
        %td= link_to 'Show', draft
        %td= link_to 'Edit', edit_draft_path(draft)
        %td= link_to 'Destroy', draft, method: :delete, data: { confirm: 'Are you sure?' }
  %br
    = link_to 'New Draft', new_draft_path