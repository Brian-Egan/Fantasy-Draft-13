.jumbotron.headerJumbo
	.row#draftHeader
		= render :partial => 'shared/draftHeader'

	%div{:class => 'panel panel-success col-md-10 col-md-offset-1 selectionPanel'}
		%form{:class => "form-inline"}
			%input{:type => 'text', :class => 'col-md-7', :placeholder => 'Player', :id => "pName", :'data' => { :'name' => 'name'}}
			%input{:type => 'text', :class => 'col-md-1 col-md-offset-1', :placeholder => 'Pos', :id => 'pPos', :'data' => { :'pos' => 'position'}}
			%button{:type => 'submit', :class => 'btn btn-default btn-sm col-md-offset-1 col-md-2', :id => 'draftSubmit'} Submit

#AvailPlayers{:class => 'panel panel-success'}
	%div{:class => 'panel-heading availableHeader row'}
		%h3{:class => 'col-md-3'} Players Available
		%a{:'data-toggle' => 'modal', :href => '#myTeam', :class => 'btn btn-warning btn-sm col-md-1 mTeamBtn'} My Team
		%div{:class => 'btn-toolbar pull-right'}
			%div{:class => 'btn-group'}
				%button{:class => 'btn btn-sm btn-default posBtn', :'data-pos' => 'QB', :id => 'QB'} QB
				%button{:class => 'btn  btn-sm btn-default posBtn', :'data-pos' => 'RB', :id => 'RB'} RB
				%button{:class => 'btn btn-sm  btn-default posBtn', :'data-pos' => 'WR', :id => 'WR'} WR
				%button{:class => 'btn btn-sm  btn-default posBtn', :'data-pos' => 'TE', :id => 'TE'} TE
				%button{:class => 'btn btn-sm  btn-default posBtn', :'data-pos' => 'PK', :id => 'PK'} K
				%button{:class => 'btn btn-sm  btn-default posBtn', :'data-pos' => 'DT', :id => 'DT'} Def
				%button{:class => 'btn btn-sm  btn-default posBtn', :'data-pos' => 'AllOff', :id => 'AllOff'} All Off.
			%div{:class => 'btn-group'}
				%button{:class => 'btn btn-sm  btn-info posBtn', :'data-pos' => 'All', :id => 'All'} Show All
				%div{:class => 'btn-toolbar'}
		-# %button{:class => 'btn  btn-sm btn-default pPointsBtn  col-md-offset-1', :'data-pos' => 'points', :id => 'sortPoints'} Sort by Points
		%div{:class => 'btn-group pPointsBtn col-md-offset-1'}
			%button{:class => 'btn btn-sm btn-default pointsBtn active', :'data-pos' => 'season', :id => 'season'} Season
			%button{:class => 'btn  btn-sm btn-default pointsBtn', :'data-pos' => 'weekly', :id => 'weekly'} Weekly


	%div{:class => 'row', :id => 'playersAvail'}
		= render :partial => 'shared/playersAvailable'

	%div#prevNext
		= link_to '← Prev....', active_path(:page => @prevLink), :class => 'navBtn'
		= link_to '....Next →', active_path(:page => @nxtLink), :class => 'alignRight navBtn'
		= link_to "Show Teams by Points", '#TeamsPoints', :'data-toggle' => 'modal', :class => 'btn btn-xs  btn-info teamsPointsBtn pull-right'
	

#DraftSummary
	= render :partial => 'shared/draftSummary'

#myTeam.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
	= render :partial => 'shared/myTeamModal', :locals => {:teamName => "Mit Wobet"}

#TeamsPoints.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
	= render :partial => 'shared/teamsByPoints'
